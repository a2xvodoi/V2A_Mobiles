<%- include('../layouts/header_blank',{title: 'Đăng nhập'}) %>
<div class="w-50 m-auto py-5">
    <div class="auth-logo">
        <a href=""><img src="/back/assets/images/logo/logo.png" alt="Logo" height="80px"></a>
    </div>
    <h1 class="auth-title">Đăng nhập</h1>
    <p class="auth-subtitle mb-5">Chào mừng bạn đến với trang quản trị. Vui lòng đăng nhập để truy cập hệ thống</p>
    <div class="text-danger fst-italic mb-2"><%= typeof error !== 'undefined' ? error : ''  %> </div>
    <form action="login" method="POST">
        <div class="form-group position-relative has-icon-left mb-4">
            <input type="text" class="form-control form-control-xl" placeholder="Tên đăng nhập" name="user_name">
            <div class="form-control-icon">
                <i class="bi bi-person"></i>
            </div>
        </div>
        <div class="form-group position-relative has-icon-left mb-4">
            <input type="password" class="form-control form-control-xl" placeholder="Mật khẩu" name="password">
            <div class="form-control-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
        </div>
        <div class="form-check form-check-lg d-flex align-items-end">
            <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label text-gray-600" for="flexCheckDefault">
                Keep me logged in
            </label>
        </div>
        <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Đăng nhập</button>
    </form>
</div>
<%- include('../layouts/footer_blank') %>
